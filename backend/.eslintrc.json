{
    "plugins": [
        "babel"
    ],
    "env": {
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "semi": ["error", "never"],
        "no-underscore-dangle": "off",
        "no-throw-literal": "off"
    }
}
